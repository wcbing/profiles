# colorful for bash
alias ls="ls -F --color=auto"
alias grep="grep --color=auto"

# list file
alias la="ls -a"
alias ll="ls -lh"
alias lla="ls -alh"

# Directory and File
alias mkdir="mkdir -pv"
alias rm="rm -rv"
alias mv="mv -v"
alias cp="cp -rv"

# Human Readable
alias free="free -h"
alias df="df -h"
alias du="du -h"

# Systemctl
alias sctl="systemctl"
alias ssctl="sudo systemctl"

# Containers
#alias docker=podman
alias nginx="docker exec nginx nginx"
alias debian="docker exec -it debian bash"
alias archlinux="docker exec -it arch bash"
alias openeuler="docker exec -it openeuler bash"

# Package Manager
## Change the package manager to your own, like apt/dnf/pacman, etc.
## If you not a root user, please use "sudo xxx".
export pkg="yay"

#. $Profile_PATH/shell/pkg
. $Profile_PATH/shell/pacman